
<tr>
    <td><%= produto.nome %></td>
    <td><%= produto.descricao %></td>
    <td align="right"><%= produto.preco %></td>
    <td align="center"><%= produto.quantidade %></td>
    <td align="center">
        <%= button_to "Remover", produto, 
            method: :delete, 
            class: "btn btn-danger",
            data: {confirm: "Tem certeza que deseja remover #{produto.nome} ?"} %>
    </td>
    <td>
        <%= link_to "Alterar", edit_produto_path(produto), class: "btn btn-default" %>
    </td>
</tr>
